{
    "openapi": "3.0.0",
    "info": {
        "title": "Blog Api",
        "version": "1.0.0"
    },
    "paths": {
        "/api": {
            "get": {
                "tags": [
                    "Posts"
                ],
                "summary": "Get list of Posts",
                "description": "Returns list of Posts",
                "operationId": "getPostsList",
                "parameters": [
                    {
                        "name": "search",
                        "in": "query",
                        "description": "Search posts by name or title",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "List Posts"
                    },
                    "404": {
                        "description": "No posts found!"
                    }
                }
            }
        },
        "/api/posts/{post}": {
            "get": {
                "tags": [
                    "Posts"
                ],
                "summary": "show single post",
                "operationId": "58bd59e1dc249b56965326fc6f750fee",
                "parameters": [
                    {
                        "name": "post",
                        "in": "path",
                        "description": "get single post by id",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "get single post by id"
                    },
                    "404": {
                        "description": "Post not fount"
                    }
                }
            },
            "put": {
                "tags": [
                    "Posts"
                ],
                "summary": "Update Post",
                "operationId": "4760ad60b20b212c5d881384e5ee5fb6",
                "parameters": [
                    {
                        "name": "post",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "title",
                                    "description",
                                    "user_id"
                                ],
                                "properties": {
                                    "title": {
                                        "type": "string",
                                        "example": "New Post"
                                    },
                                    "description": {
                                        "type": "string",
                                        "example": "Post description"
                                    },
                                    "user_id": {
                                        "type": "integer",
                                        "example": 1
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Post updated successfully"
                    },
                    "404": {
                        "description": "Post not found"
                    }
                }
            },
            "delete": {
                "tags": [
                    "Posts"
                ],
                "summary": "Delete Post",
                "operationId": "a67368ff87b0d115e9506fd7a912637e",
                "parameters": [
                    {
                        "name": "post",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Post deleted successfully"
                    },
                    "404": {
                        "description": "Post not found"
                    }
                }
            }
        },
        "/api/posts": {
            "post": {
                "tags": [
                    "Posts"
                ],
                "summary": "Create New Post",
                "operationId": "c73f2ef900493412bf5fb6a274c2bf5a",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "title",
                                    "description",
                                    "user_id"
                                ],
                                "properties": {
                                    "title": {
                                        "type": "string",
                                        "example": "New Post"
                                    },
                                    "description": {
                                        "type": "string",
                                        "example": "Post description"
                                    },
                                    "user_id": {
                                        "type": "integer",
                                        "example": 1
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Create new post successfully"
                    }
                }
            }
        }
    },
    "tags": [
        {
            "name": "Posts",
            "description": "Posts"
        }
    ]
}